# CHRONOS Development Environment
# This file contains safe development defaults

#------------------------------------------------------------------------------
# APPLICATION SETTINGS
#------------------------------------------------------------------------------
NODE_ENV=development
PORT=3001
APP_NAME="CHRONOS Financial (Dev)"
APP_VERSION=1.0.0-dev
APP_URL=http://localhost
API_VERSION=v1

# Development secrets (safe for development)
JWT_SECRET=dev_jwt_secret_change_in_production_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# Session configuration
SESSION_SECRET=dev_session_secret_change_in_production_min_32_chars
SESSION_MAX_AGE=86400000
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

#------------------------------------------------------------------------------
# DATABASE CONFIGURATION
#------------------------------------------------------------------------------
DATABASE_URL=postgresql://chronos_user:chronos_password@localhost:5432/chronos_dev

# Database pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=60000

# Backup settings
BACKUP_ENABLED=false

#------------------------------------------------------------------------------
# REDIS CONFIGURATION
#------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=chronos:dev:
REDIS_TTL_DEFAULT=3600

#------------------------------------------------------------------------------
# EMAIL CONFIGURATION (using Mailhog for development)
#------------------------------------------------------------------------------
EMAIL_PROVIDER=smtp
EMAIL_FROM=dev@chronos.local
EMAIL_FROM_NAME="CHRONOS Financial (Dev)"

# Mailhog SMTP settings
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=

#------------------------------------------------------------------------------
# WHATSAPP INTEGRATION (development/sandbox)
#------------------------------------------------------------------------------
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_API_TOKEN=dev_token_replace_with_real_token
WHATSAPP_PHONE_NUMBER_ID=dev_phone_number_id
WHATSAPP_WEBHOOK_SECRET=dev_webhook_secret_change_in_production
WHATSAPP_WEBHOOK_URL=http://localhost/api/webhook/whatsapp
WHATSAPP_VERIFY_TOKEN=dev_verify_token

#------------------------------------------------------------------------------
# FILE STORAGE
#------------------------------------------------------------------------------
STORAGE_PROVIDER=local
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Local storage
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=/uploads

#------------------------------------------------------------------------------
# SECURITY SETTINGS (relaxed for development)
#------------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate limiting (more permissive for development)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=true

# API rate limiting
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=50

# Content Security Policy
CSP_ENABLED=false
CSP_REPORT_URI=/api/csp-report

# Security headers (disabled for easier development)
SECURITY_HEADERS_ENABLED=false

#------------------------------------------------------------------------------
# MONITORING AND LOGGING
#------------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_ENABLED=false

# Error tracking (disabled in development)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACE_SAMPLE_RATE=0

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# Metrics
METRICS_ENABLED=false

#------------------------------------------------------------------------------
# FEATURE FLAGS
#------------------------------------------------------------------------------
FEATURE_MULTI_TENANT=true
FEATURE_WHATSAPP_INTEGRATION=false
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_BUDGET_ALERTS=true
FEATURE_AUDIT_LOGGING=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_EXPORT_DATA=true
FEATURE_API_DOCUMENTATION=true

#------------------------------------------------------------------------------
# PAYMENT PROCESSING (test/sandbox keys)
#------------------------------------------------------------------------------
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=pk_test_dev_key_replace_with_real
STRIPE_SECRET_KEY=sk_test_dev_key_replace_with_real
STRIPE_WEBHOOK_SECRET=whsec_dev_secret_replace_with_real

#------------------------------------------------------------------------------
# THIRD-PARTY INTEGRATIONS (sandbox/test)
#------------------------------------------------------------------------------
# Plaid sandbox
PLAID_CLIENT_ID=dev_client_id
PLAID_SECRET=dev_secret
PLAID_PUBLIC_KEY=dev_public_key
PLAID_ENVIRONMENT=sandbox

# Twilio sandbox
TWILIO_ACCOUNT_SID=dev_account_sid
TWILIO_AUTH_TOKEN=dev_auth_token
TWILIO_PHONE_NUMBER=+15005550006

# Analytics (disabled in development)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

#------------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
#------------------------------------------------------------------------------
DEBUG=true
DEBUG_SQL=false
SEED_DATABASE=true
RESET_DATABASE=false

# API documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

#------------------------------------------------------------------------------
# CACHING CONFIGURATION
#------------------------------------------------------------------------------
CACHE_ENABLED=true
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600

#------------------------------------------------------------------------------
# LOCALIZATION
#------------------------------------------------------------------------------
DEFAULT_LOCALE=en
DEFAULT_TIMEZONE=UTC
SUPPORTED_LOCALES=en,es,pt
SUPPORTED_CURRENCIES=USD,EUR,BRL

#------------------------------------------------------------------------------
# FRONTEND CONFIGURATION
#------------------------------------------------------------------------------
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001/ws
VITE_APP_NAME="CHRONOS Financial (Dev)"
VITE_APP_VERSION=1.0.0-dev
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=