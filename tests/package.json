{
  "name": "chronos-financial-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for CHRONOS Financial multi-tenant SaaS platform",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest infrastructure/",
    "test:integration": "jest integration/",
    "test:e2e": "jest e2e/",
    "test:security": "jest security/",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=50%",
    "test:tenant-isolation": "../scripts/test-tenant-isolation.sh",
    "test:performance": "../scripts/performance-test.sh",
    "test:infrastructure": "../scripts/test-infrastructure.sh",
    "test:all": "npm run test:infrastructure && npm run test:tenant-isolation && npm run test:performance",
    "test:docker": "../scripts/test-infrastructure.sh --docker",
    "test:quick": "jest --testPathPattern='(unit|integration)' --coverage=false",
    "test:slow": "jest --testPathPattern='(e2e|security)' --runInBand",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf coverage test-reports node_modules",
    "setup": "npm install && npm run test:docker -- --no-cleanup",
    "docker:up": "docker-compose -f docker-test-compose.yml up -d",
    "docker:down": "docker-compose -f docker-test-compose.yml down -v",
    "docker:logs": "docker-compose -f docker-test-compose.yml logs -f",
    "docker:test": "docker-compose -f docker-test-compose.yml run --rm test-runner npm test"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>"],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "../backend/src/**/*.ts",
      "../prisma/**/*.ts",
      "!../backend/src/**/*.d.ts",
      "!../backend/src/types/**/*.ts",
      "!../node_modules/**",
      "!../dist/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "lcov",
      "json",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/utils/test-setup.ts"],
    "testTimeout": 30000,
    "maxWorkers": "50%",
    "verbose": false,
    "detectOpenHandles": true,
    "forceExit": true,
    "clearMocks": true,
    "restoreMocks": true,
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/../backend/src/$1",
      "^@prisma/(.*)$": "<rootDir>/../prisma/$1",
      "^@tests/(.*)$": "<rootDir>/$1"
    },
    "projects": [
      {
        "displayName": "Infrastructure Tests",
        "testMatch": ["<rootDir>/infrastructure/**/*.test.ts"],
        "setupFilesAfterEnv": ["<rootDir>/utils/test-setup.ts"],
        "testTimeout": 30000
      },
      {
        "displayName": "Integration Tests",
        "testMatch": ["<rootDir>/integration/**/*.test.ts"],
        "setupFilesAfterEnv": ["<rootDir>/utils/test-setup.ts"],
        "testTimeout": 60000
      },
      {
        "displayName": "E2E Tests",
        "testMatch": ["<rootDir>/e2e/**/*.test.ts"],
        "setupFilesAfterEnv": ["<rootDir>/utils/test-setup.ts"],
        "testTimeout": 120000
      },
      {
        "displayName": "Security Tests",
        "testMatch": ["<rootDir>/security/**/*.test.ts"],
        "setupFilesAfterEnv": ["<rootDir>/utils/test-setup.ts"],
        "testTimeout": 60000
      }
    ],
    "reporters": [
      "default",
      ["jest-html-reporters", {
        "publicPath": "coverage/html-report",
        "filename": "report.html",
        "expand": true,
        "hideIcon": false,
        "pageTitle": "CHRONOS Financial Test Report"
      }],
      ["jest-junit", {
        "outputDirectory": "test-reports",
        "outputName": "junit.xml",
        "ancestorSeparator": " â€º ",
        "uniqueOutputName": "false",
        "suiteNameTemplate": "{displayName}: {filepath}",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}"
      }]
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "compilerOptions": {
            "module": "commonjs",
            "target": "es2020",
            "lib": ["es2020"],
            "allowJs": true,
            "skipLibCheck": true,
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true,
            "strict": true,
            "forceConsistentCasingInFileNames": true,
            "moduleResolution": "node",
            "resolveJsonModule": true,
            "isolatedModules": true,
            "noEmit": true,
            "experimentalDecorators": true,
            "emitDecoratorMetadata": true
          }
        }
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.10.5",
    "@types/bcryptjs": "^2.4.6",
    "@faker-js/faker": "^8.2.0",
    "@prisma/client": "^5.7.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "prisma": "^5.7.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "crypto": "^1.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "testing",
    "multi-tenant",
    "saas",
    "financial",
    "security",
    "performance",
    "integration",
    "e2e",
    "tenant-isolation",
    "rls",
    "sql-injection",
    "prisma",
    "postgresql",
    "jest",
    "typescript"
  ],
  "author": "CHRONOS Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/chronos-financial.git",
    "directory": "tests"
  }
}