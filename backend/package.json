{
  "name": "chronos-backend",
  "version": "1.0.0",
  "description": "CHRONOS Multi-Tenant Financial SaaS Backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
