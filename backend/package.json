    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@prisma/client": "^5.19.1",
    "bcrypt": "^5.1.1",
    "chrono-node": "^2.9.0",
    "compromise": "^14.14.4",
    "currency.js": "^2.0.4",
    "fastify": "^4.28.1",
    "fastify-socket.io": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
